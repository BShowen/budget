{
  "name": "budget-app",
  "private": true,
  "engines": {
    "node": "14.21.4",
    "npm": "6.14.17"
  },
  "scripts": {
    "start": "meteor run --settings ./ignoredFiles/productionSettings.json",
    "reset-and-start": "meteor reset && meteor run --settings ./ignoredFiles/productionSettings.json",
    "test-production": "meteor run --production --settings ./ignoredFiles/productionSettings.json",
    "deploy": "DEPLOY_HOSTNAME=galaxy.meteor.com meteor deploy doughtracker.meteorapp.com --settings ./ignoredFiles/productionSettings.json",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "autoprefixer": "^10.4.4",
    "bcrypt": "^5.1.1",
    "lodash": "^4.17.21",
    "meteor-node-stubs": "^1.2.1",
    "postcss": "^8.4.31",
    "postcss-load-config": "^3.1.4",
    "react": "^18.2.0",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-router-dom": "^6.18.0",
    "simpl-schema": "^1.13.1",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.0.23",
    "@tailwindcss/forms": "^0.5.6"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2"
  }
}
